<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <h2>Sign in</h2>
    <div class="clearfix">
        <%= f.label :login %>
        <div class="input">
            <%= f.text_field :login %>
        </div>
    </div>

    <div class="clearfix">
        <%= f.label :password %>
        <div class="input">
            <%= f.password_field :password %>
        </div>
    </div>

    <div class="clearfix">
        <div class="input">
            <%= f.check_box :remember_me %>
            <span>Remember me</span>
        </div>
    </div>

    <div class="actions">
        <%= f.submit "Sign in", :class => "btn primary" %>
        <%= f.submit "Reset", :type => "reset", :class => "btn" %>
    </div>
<% end %>
