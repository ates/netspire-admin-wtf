<div class="clearfix">
    <%= form.label :name %>
    <div class="input">
        <%= form.text_field :name, :size => 30 %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :description %>
    <div class="input">
        <%= form.text_area :description, :cols => 60, :rows => 10 %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :active %>
    <div class="input">
        <%= form.check_box :active %>
        <span>Yes, activate it</span>
    </div>
</div>
