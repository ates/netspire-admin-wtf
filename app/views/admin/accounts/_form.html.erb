<div class="clearfix">
    <%= form.label :contract %>
    <div class="input">
        <%= form.text_field :contract, :size => 30 %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :login %>
    <div class="input">
        <%= form.text_field :login, :size => 30 %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :password %>
    <div class="input">
        <%= form.password_field :password %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :balance %>
    <div class="input">
        <%= form.text_field :balance, :size => 10 %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :active %>
    <div class="input">
        <%= form.check_box :active %>
        <span>Yes, serve this account</span>
    </div>
</div>
